<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relItemUser"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_repository_height">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true">

        <TextView
            android:maxLines="1"
            android:textSize="@dimen/repository_name_text_size"
            android:layout_marginTop="@dimen/margin_text"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="1"
            android:textSize="@dimen/repository_description_text_size"
            android:layout_marginTop="@dimen/margin_text"
            android:layout_marginBottom="@dimen/margin_text"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"/>

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

</RelativeLayout>