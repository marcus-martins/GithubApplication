<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relItemUser"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_item_content"
        android:layout_marginEnd="@dimen/margin_item_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/user_image_width"
            android:layout_height="@dimen/user_image_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:maxLines="1"
            android:textSize="24sp"
            android:layout_marginStart="@dimen/margin_text"
            android:layout_centerInParent="true"
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userImage" />

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

</RelativeLayout>